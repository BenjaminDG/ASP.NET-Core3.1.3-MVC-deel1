@model Persoon
@{ ViewBag.Title = "Persoongegevens wijzigen";}
<h2>Persoonsgegevens wijzigen</h2>
<form asp-action="Edit" method="post">
    <label asp-for="ID"></label>
    <input asp-for="ID" readonly />
    <label asp-for="Voornaam"></label>
    <input asp-for="Voornaam" />
    <label asp-for="Familienaam"></label>
    <input asp-for="Familienaam" />
    <label asp-for="Score"></label>
    <input asp-for="Score" />
    <label asp-for="Wedde"></label>
    <input asp-for="Wedde" />
    @* <label asp-for="Paswoord"></label>
        <input asp-for="Paswoord" type="password" />*@
    <input asp-for="Paswoord" type="hidden" />
    <input asp-for="HerhaalPaswoord" type="hidden" />
    <label asp-for="Geboren"></label>
    @Html.HiddenFor(m => m.Paswoord)
    <input asp-for="Geboren" />
    <div>
        <input asp-for="Gehuwd" />
        <label asp-for="Gehuwd"></label>
    </div>
    <label asp-for="Opmerkingen"></label>
<textarea asp-for="Opmerkingen"></textarea>



    @Html.LabelFor(m => m.Geslacht)
    @Html.EditorFor(m => m.Geslacht)




    <input type="submit" value="Wijzigen" />
    <div asp-validation-summary="All"></div>
</form>